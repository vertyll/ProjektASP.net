@using System.Globalization
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.Price.ToString("C",CultureInfo.CreateSpecificCulture("en-US"))
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <img src="~/media/products/@item.Image" style="width: auto; height: 50px;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="">
                        <i class="bi bi-trash3 text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
